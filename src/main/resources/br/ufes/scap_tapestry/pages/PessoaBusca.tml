<html t:type="layout" title="Buscar Usuario" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">


	<t:form t:id="buscar" class="form-horizontal">
		<fieldset>
			<legend>Entre com o Nome e o Sobrenome da Pessoa:</legend>
			<div class="control-group">
			  <label class="control-label" for="textinput">Nome:</label>
			  <div class="controls">
			  	<t:textfield t:id="nome" placeholder="Nome" validate="required"/>
			  </div>
			</div>
			<div class="control-group">
			  <label class="control-label" for="textinput">Sobrenome:</label>
			  <div class="controls">
			  	<t:textfield t:id="sobrenome" placeholder="Sobrenome" validate="required"/>    
			  </div>
			</div>
			<div class="control-group">
			  <label class="control-label" for="singlebutton"></label>
			  <div class="controls">
			    <t:submit class="btn btn-primary" value="Buscar"/>
			  </div>
			</div>
		</fieldset>
	</t:form>

               
</html>